<h1 align="center">All Y-Bloggers</h1>

<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <ul class="listing">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.user_name, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Delete this user", user_path(user), method: :delete, 
                    data: {confirm: "Are you sure you want to delete this user and all their articles?"},
                    class: "btn btn-xs btn-danger" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <%= will_paginate %>
</div>